@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Events in your city</h3>
    <table>
        <tr class="header">
            <td><p>Event</p></td>
            <td><p>Orginizer</p></td>
            <td><p>Date</p></td>
            <td><p>Price</p></td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Events)
            {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Orginizer</p></td>
                <td><p>@b.Date</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Buy</a></p></td>
            </tr>
        }
    </table>
</div>